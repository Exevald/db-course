#!/usr/bin/env bash

# This script is in created for running MySQL commands in docker container
# Usage: bash run-task-1
# Script result in file result.txt

set -o errexit

PLATFORM_DIR=$(dirname "$(dirname "$(readlink -f "$0")")")
SCRIPTS_DIR="$PLATFORM_DIR"/data/mysql

docker exec -i aviation-mysql-db mysql -usandbox -p123s bookings < "$SCRIPTS_DIR"/task1.sql > result.txt

echo Task 1 passed